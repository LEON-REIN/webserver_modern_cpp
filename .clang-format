Language: Cpp
BasedOnStyle: Google

# 最大列宽
ColumnLimit: 130

# 连续空行的最大数量
MaxEmptyLinesToKeep: 2

# 允许排序#include
SortIncludes: Never

# 允许排序 using 声明
SortUsingDeclarations: false

# 在尾随的评论前添加的空格数(只适用于//)
SpacesBeforeTrailingComments: 2

# 使用tab字符: Never, ForIndentation, ForContinuationAndIndentation, Always
UseTab: Never